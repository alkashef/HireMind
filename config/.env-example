# Logging
LOG_FILE_PATH=logs/app.log

# Applicants repository
APPLICANTS_FOLDER=C:\\Users\\<YourUser>\\Documents\\Applicants
DATA_PATH=data

# Roles repository
# If not set, defaults to APPLICANTS_FOLDER
ROLES_FOLDER=C:\\Users\\<YourUser>\\Documents\\Roles


# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
MAX_FILE_MB=10
# For clarity only; we use the Responses API with file attachments
OPENAI_API_MODE=responses
# Optional request timeout in seconds
REQUEST_TIMEOUT_SECONDS=60

# Weaviate (optional) - used when running the parallel vector store
# If you run Weaviate locally, enable the local helper flag and leave
# WEAVIATE_URL empty or set it explicitly. Example local URL:
#   http://localhost:8080
# To opt into using the local helper set WEAVIATE_USE_LOCAL=true.
WEAVIATE_USE_LOCAL=false
# Set WEAVIATE_URL to the base URL (for example: http://localhost:8080 or https://your-weaviate-host).
# If WEAVIATE_USE_LOCAL=true and WEAVIATE_URL is empty, the code will default to http://localhost:8080.
WEAVIATE_URL=
# Optional API key for Weaviate (leave empty for no auth)
WEAVIATE_API_KEY=
# Batch size to use when upserting sections/objects
WEAVIATE_BATCH_SIZE=64
# Optional path for persisted Weaviate data on the host. Defaults to `data/weaviate_data`.
# This is used by local Docker helpers and documented in the README. Leave empty to use the
# repository default `data/weaviate_data`.
WEAVIATE_DATA_PATH=data/weaviate_data

# Prompt templates (filenames inside the `prompts/` folder).
# Change these if you rename prompts or want a different template at runtime.
# The application reads these via `config.settings.AppConfig` properties.
PROMPT_EXTRACT_FROM_CV_SYSTEM=extract_from_cv_system.md
PROMPT_EXTRACT_FROM_CV_USER=extract_from_cv_user.md
# Legacy/deprecated names (kept as references)
PROMPT_CV_FULL_NAME_SYSTEM=cv_full_name_system.md
PROMPT_CV_FULL_NAME_USER=cv_full_name_user.md

# Test and utility prompts
PROMPT_NUMERIC_2_PLUS_2=prompt_numeric_2_plus_2.md
PROMPT_SUMMARIZE_SHORT=prompt_summarize_short.md
PROMPT_SAMPLE_SHORT_HELLO=sample_short_text_hello.md
PROMPT_HELLO_WORLD=hello_world.txt
PROMPT_SUMMARIZE_THIS=summarize_this.txt
