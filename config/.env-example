# Logging
LOG_FILE_PATH=logs/app.log

# Data paths
DATA_PATH=data
WEAVIATE_SCHEMA_PATH=store/weaviate_schema.json

# Applicants / Roles folders
# Set these to the folder you keep PDFs for extraction. Leave blank to use
# default behavior or provide a project-local path.
APPLICANTS_FOLDER=
ROLES_FOLDER=

# OpenAI (fill in with your real key for local testing or CI; keep secret)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
MAX_FILE_MB=10
REQUEST_TIMEOUT_SECONDS=60

# Weaviate (optional)
# For a developer-friendly local setup, enable local embeddings and disable
# server-side modules. To use server-side vectorizers, change ENABLE_MODULES
# and provide TRANSFORMERS_* variables as required by your deployment.
WEAVIATE_USE_LOCAL=true
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_BATCH_SIZE=64
WEAVIATE_DATA_PATH=store/weaviate_data
WEAVIATE_GRPC_PORT=8081
USE_LOCAL_EMBEDDINGS=1
ENABLE_MODULES=none
DEFAULT_VECTORIZER_MODULE=none
SKIP_WEAVIATE_VECTORIZER_CHECK=1

# Unified prompt bundle (JSON with system, user, fields, hints, instructions, formatting_rules)
PROMPT_EXTRACT_CV_FIELDS_JSON=prompt_extract_cv_fields.json
PROMPT_EXTRACT_ROLE_FIELDS_JSON=prompt_extract_role_fields.json

# Test and utility prompts (deprecated; removed)

# Local model configuration removed (Hermes/paraphrase no longer used)

# Standalone extraction report (env-driven paths)
# Absolute paths recommended for Windows. The report script prefers TEST_CV_REF_JSON
# and falls back to TEST_CV_JSON_OUTPUT when not set.
TEST_CV_PATH=
TEST_CV_DOCX_PATH=
TEST_CV_REF_JSON=tests/ref/Ahmad Alkashef - Resume - OpenAI.cleaned.json
TEST_CV_JSON_OUTPUT=
TEST_RESULTS=tests/results

# Role E2E inputs and outputs
TEST_ROLE_PATH=
TEST_ROLE_DOCX_PATH=
TEST_ROLE_E2E_JSON=tests/role_e2e.json
TEST_ROLE_E2E_JSON_READ=tests/role_e2e_read.json

# E2E pipeline consolidated output
# Single JSON artifact that accumulates text, fields, sections, embeddings, and weaviate status.
TEST_E2E_JSON=tests/e2e.json
TEST_E2E_JSON_READ=tests/e2e_read.json

# OpenAI embeddings model (for E2E step 4)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
