# Logging
LOG_FILE_PATH=logs/app.log

# Data paths
DATA_PATH=data
WEAVIATE_SCHEMA_PATH=data/weaviate_schema.json

# Applicants / Roles folders
# Set these to the folder you keep PDFs for extraction. Leave blank to use
# default behavior or provide a project-local path.
APPLICANTS_FOLDER=
ROLES_FOLDER=

# OpenAI (fill in with your real key for local testing or CI; keep secret)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
MAX_FILE_MB=10
REQUEST_TIMEOUT_SECONDS=60

# Weaviate (optional)
# For a developer-friendly local setup, enable local embeddings and disable
# server-side modules. To use server-side vectorizers, change ENABLE_MODULES
# and provide TRANSFORMERS_* variables as required by your deployment.
WEAVIATE_USE_LOCAL=true
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_BATCH_SIZE=64
WEAVIATE_DATA_PATH=data/weaviate_data
WEAVIATE_GRPC_PORT=8081
USE_LOCAL_EMBEDDINGS=1
ENABLE_MODULES=none
DEFAULT_VECTORIZER_MODULE=none
SKIP_WEAVIATE_VECTORIZER_CHECK=1

# Prompt templates (filenames inside the `prompts/` folder)
PROMPT_EXTRACT_FROM_CV_SYSTEM=extract_from_cv_system.md
PROMPT_EXTRACT_FROM_CV_USER=extract_from_cv_user.md

# Test and utility prompts
PROMPT_NUMERIC_2_PLUS_2=prompt_numeric_2_plus_2.md
PROMPT_SUMMARIZE_SHORT=prompt_summarize_short.md
PROMPT_SAMPLE_SHORT_HELLO=sample_short_text_hello.md
PROMPT_HELLO_WORLD=hello_world.txt
PROMPT_SUMMARIZE_THIS=summarize_this.txt

# Hermes (local HF model) defaults
HERMES_MODEL_DIR=models/hermes-pro
HERMES_QUANTIZE_4BIT=true
HERMES_TEMPERATURE=0.0
HERMES_NUM_BEAMS=1
HERMES_MAX_NEW_TOKENS=128

# Paraphrase (embedding) model
PARAPHRASE_MODEL_DIR=models/paraphrase-MiniLM-L12-v2
# Device to load paraphrase model: 'cpu' or 'cuda'
PARAPHRASE_DEVICE=cpu
